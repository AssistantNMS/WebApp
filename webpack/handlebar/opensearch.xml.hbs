<OpenSearchDescription xmlns="http://a9.com/-/spec/opensearch/1.1/"
  xmlns:moz="http://www.mozilla.org/2006/browser/search/">
  <ShortName>{{meta.title}}</ShortName>
  <Description>{{meta.description}}</Description>
  <InputEncoding>UTF-8</InputEncoding>
  <Image width="16" height="16" type="image/x-icon">{{rootUrl}}/favicon.ico</Image>
  <Url type="text/html" template="{{rootUrl}}?q={searchTerms}">
    <Param name="searchTerms" value="{searchTerms}" />
  </Url>
  <Url type="application/x-suggestions+json" template="{{rootUrl}}?q={searchTerms}" />
</OpenSearchDescription>