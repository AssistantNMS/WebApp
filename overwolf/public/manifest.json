{
  "manifest_version": 1,
  "type": "WebApp",
  "meta": {
    "name": "Assistant for No Man's Sky",
    "author": "AssistantApps",
    "version": "0.0.1",
    "minimum-overwolf-version": "0.160.0",
    "description": "Get Crafting, Refining and Cooking Recipes for the game No Man's Sky!!",
    "dock_button_title": "AssistantNMS",
    "icon": "assets/icons/IconMouseOver.png",
    "icon_gray": "assets/icons/IconMouseNormal.png",
    "launcher_icon": "assets/icons/desktop-icon.ico",
    "window_icon": "assets/icons/IconMouseOver.png"
  },
  "permissions": [
    "Hotkeys",
    "GameInfo"
  ],
  "data": {
    "start_window": "background",
    "hotkeys": {
      "assistant_nms_showhide": {
        "title": "Show/Hide In-Game Window",
        "action-type": "toggle",
        "default": "Ctrl+F"
      }
    },
    "protocol_override_domains": {
      "googlesyndication": "http"
    },
    "externally_connectable": {
      "matches": [
        "http://*.overwolf.com",
        "https://*.overwolf.com",
        "https://*.assistantapps.com",
        "https://*.nmsassistant.com",
        "https://*.google-analytics.com",
        "http://*.google-analytics.com",
        "https://www.googleapis.com"
      ]
    },
    "force_browser": "user",
    "windows": {
      "background": {
        "file": "background.html",
        "background_optimization": false,
        "is_background_page": true
      },
      "desktop": {
        "file": "desktop.html",
        "desktop_only": true,
        "native_window": true,
        "resizable": true,
        "transparent": true,
        "override_on_update": true,
        "size": {
          "width": 1000,
          "height": 700
        },
        "min_size": {
          "width": 800,
          "height": 600
        }
      },
      "in_game": {
        "file": "in_game.html",
        "in_game_only": true,
        "focus_game_takeover": "ReleaseOnHidden",
        "focus_game_takeover_release_hotkey": "assistant_nms_showhide",
        "resizable": true,
        "transparent": true,
        "override_on_update": true,
        "size": {
          "width": 1212,
          "height": 699
        },
        "min_size": {
          "width": 1212,
          "height": 699
        }
      }
    },
    "game_targeting": {
      "type": "dedicated",
      "game_ids": [
        8032
      ]
    },
    "game_events": [],
    "launch_events": [
      {
        "event": "GameLaunch",
        "event_data": {
          "game_ids": [
            8032
          ]
        },
        "start_minimized": true
      }
    ],
    "developer": {
      "enable_auto_refresh": true,
      "reload_delay": 1000,
      "filter": "*.*"
    }
  }
}